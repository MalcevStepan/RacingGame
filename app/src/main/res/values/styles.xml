<resources>

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColorPrimary">#177CA2</item>
        <item name="android:textColor">#627380</item>
        <item name="colorPrimary">#CCCCCC</item>
        <item name="colorPrimaryDark">#D7D7D7</item>
        <item name="android:statusBarColor">?android:attr/colorPrimaryDark</item>
        <item name="colorAccent">#627380</item>
        <item name="android:backgroundTint">?android:attr/colorPrimaryDark</item>
        <item name="colorButtonNormal">#BFBDBD</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">?android:attr/colorPrimaryDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">#262626</item>
        <item name="android:textSize">20sp</item>
        <item name="colorPrimaryDark">#363636</item>
        <item name="colorAccent">#8D8D8D</item>
        <item name="colorButtonNormal">#627380</item>
        <item name="android:backgroundTint">?android:attr/colorPrimaryDark</item>
        <item name="android:textColorPrimary">#EDEDED</item>
        <item name="android:textColor">#CCCCCC</item>
    </style>

    <style name="NumpadStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?android:attr/colorButtonNormal</item>
        <item name="background">@drawable/num_button_rect</item>
        <item name="android:layout_marginEnd">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">55dp</item>
    </style>

    <style name="SettingsStyle">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>